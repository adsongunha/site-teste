JavaScript (script.js):const naoBtn = document.getElementById('naoBtn');
const simBtn = document.getElementById('simBtn');
const opcao1Btn = document.getElementById('opcao1Btn');
const opcao2Btn = document.getElementById('opcao2Btn');

naoBtn.addEventListener('click', () => {
  const newX = Math.floor(Math.random() * window.innerWidth);
  const newY = Math.floor(Math.random() * window.innerHeight);
  naoBtn.style.position = 'absolute';
  naoBtn.style.top = ${newY}px;
  naoBtn.style.left = ${newX}px;
});

simBtn.addEventListener('click', () => {
  alert('Marcado então, hoje às 22:00 na minha casa');
});

opcao1Btn.addEventListener('click', () => {
  alert('Eu te amo Lohany ❤');
});

opcao2Btn.addEventListener('click', () => {
  alert('Você me odeia? LOHANY SOARES DE ARAÚJO😡');
});
